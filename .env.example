# Django Base Project - Environment Variables
# Projeto Django Base - Variáveis de Ambiente
#
# This file contains all environment variables needed for the project.
# Copy this file to .env and update the values for your environment.
#
# Este arquivo contém todas as variáveis de ambiente necessárias para o projeto.
# Copie este arquivo para .env e atualize os valores para seu ambiente.
#

# General Settings / Configurações Gerais

# Debug mode (NEVER set to True in production!)
# Modo de depuração (NUNCA defina como True em produção!)
DEBUG=True

# Secret key for cryptographic signing (MUST be changed in production!)
# Chave secreta para assinatura criptográfica (DEVE ser alterada em produção!)
# Generate a new one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-this-in-production-use-at-least-50-characters

# Allowed hosts (comma-separated list)
# Hosts permitidos (lista separada por vírgulas)
ALLOWED_HOSTS=localhost,127.0.0.1,web

# Environment name (development, staging, production)
# Nome do ambiente (development, staging, production)
ENVIRONMENT=development

# Language and timezone
# Idioma e fuso horário
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Database Settings / Configurações do Banco de Dados

# PostgreSQL database configuration
# Configuração do banco de dados PostgreSQL
POSTGRES_DB=django_base_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database connection pooling (in seconds, 0 = disabled)
# Pool de conexões do banco (em segundos, 0 = desabilitado)
DB_CONN_MAX_AGE=600

# Alternative: Full database URL (overrides individual settings if set)
# Alternativa: URL completa do banco (sobrescreve configurações individuais se definida)
# DATABASE_URL=postgresql://admin:admin@db:5432/django_base_db

# Redis Settings / Configurações do Redis

# Redis URL for cache and Django Q
# URL do Redis para cache e Django Q
REDIS_URL=redis://redis:6379/0

# Redis database numbers for different purposes
# Números de banco Redis para diferentes propósitos
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_CELERY_DB=2

# CORS Settings / Configurações CORS

# Comma-separated list of allowed origins for CORS
# Lista de origens permitidas para CORS separadas por vírgula
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# Comma-separated list of trusted origins for CSRF
# Lista de origens confiáveis para CSRF separadas por vírgula
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# Email Settings / Configurações de Email

# Email backend (console for dev, smtp for production)
# Backend de email (console para dev, smtp para produção)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (for production)
# Configuração SMTP (para produção)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# Email addresses
# Endereços de email
DEFAULT_FROM_EMAIL=noreply@django-base.com
SERVER_EMAIL=server@django-base.com
ADMIN_EMAIL=admin@django-base.com

# Security Settings / Configurações de Segurança

# SSL/HTTPS Configuration (set to True in production with HTTPS)
# Configuração SSL/HTTPS (defina como True em produção com HTTPS)
SECURE_SSL_REDIRECT=False

# Session and CSRF cookie security (set to True in production)
# Segurança de cookies de sessão e CSRF (defina como True em produção)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Django REST Framework Settings

# API throttling rates
# Taxas de limitação da API
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# Django Q (Background Tasks) Settings

# Number of Django Q workers
# Número de workers do Django Q
DJANGO_Q_WORKERS=4

# Django Q timeout (in seconds)
# Timeout do Django Q (em segundos)
DJANGO_Q_TIMEOUT=300

# Django Q sync mode (True for development, False for production)
# Modo sync do Django Q (True para desenvolvimento, False para produção)
DJANGO_Q_SYNC=False

# Sentry (Error Monitoring) Settings

# Sentry DSN for error tracking (add your Sentry DSN in production)
# DSN do Sentry para rastreamento de erros (adicione seu DSN do Sentry em produção)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=0.1

# AWS S3 Settings (Optional - for media/static files)

# AWS S3 configuration for file storage (optional)
# Configuração AWS S3 para armazenamento de arquivos (opcional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.cloudfront.net
# AWS_S3_OBJECT_PARAMETERS={"CacheControl": "max-age=86400"}

# Observability Settings / Configurações de Observabilidade

# Prometheus metrics
# Métricas do Prometheus
PROMETHEUS_ENABLED=True

# Grafana admin password
# Senha do admin do Grafana
GRAFANA_ADMIN_PASSWORD=admin

# Application-Specific Settings / Configurações Específicas da Aplicação

# Default pagination size for API responses
# Tamanho padrão de paginação para respostas da API
DEFAULT_PAGINATION_SIZE=20

# Maximum file upload size (in bytes) - 20MB default
# Tamanho máximo de upload de arquivo (em bytes) - 20MB padrão
MAX_UPLOAD_SIZE=20971520

# Development Tools (Development Only)

# Django Debug Toolbar internal IPs (development only)
# IPs internos do Django Debug Toolbar (apenas desenvolvimento)
# INTERNAL_IPS=127.0.0.1,localhost

# Django Extensions (development only)
# Django Extensions (apenas desenvolvimento)
# WERKZEUG_DEBUG_PIN=off

# Production-Only Settings (Uncomment in production)

# SSL Certificate paths (for production with HTTPS)
# Caminhos dos certificados SSL (para produção com HTTPS)
# SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
# SSL_CERTIFICATE_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# Database backup settings (production)
# Configurações de backup do banco (produção)
# BACKUP_ENABLED=True
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

